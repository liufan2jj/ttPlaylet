/* 会员信息 */
.user_warp {
  padding: 0 20px;
  background-image: linear-gradient(to bottom, #efefef, #e6e8e9, #dce2e2, #d4dbd8, #d1d3cc);
}

.user_info {
  display: flex;
  align-items: center;
  padding: 20px 0;
}

.user_info_img {
  width: 42px;
  height: 42px;
  border-radius: 50%;
  border: 1px solid rgb(31, 29, 29);
  margin-right: 6px;
}

.user_info_id {
  font-size: 14px;
}

.user_vip_warp {
  position: relative;
  height: 88px;
  border-radius: 8px 8px 0 0;
  border-bottom: none;
  box-shadow: 0px 0px 5px 2px rgba(0, 0, 0, 0.3);
}

.user_vip_info {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 8px;
}

.user_vip_tag {
  font-size: 22px;
  font-weight: bold;
  text-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
}

.user_vip_tips {
  font-size: 12px;
  color: #e80f4b;
  font-weight: bold;
}

.user_vip_img {
  width: 68px;
  height: 68px;
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(-50%, -30%);
}

.vip_warp {
  padding: 0 6px;
}

/* 会员tips */
.icon_list_warp {
  width: 100%;
  display: flex;
  align-items: center;
}

.custom-icon {
  width: 28rpx;
  height: 28rpx;
}

.icon_item_desc {
  font-size: 12px;
}

/* 充值会员月，季，年 */
.charge_item {
  text-align: center;
  line-height: 80rpx;
  position: relative;
  padding-top: 18px;
  width: 215rpx;
  height: 239rpx;
  border-radius: 14rpx 14rpx 14rpx 14rpx;
}

.charge_item_discount {
  position: absolute;
  top: 0;
  left: 0;
  font-weight: 400;
  font-size: 28rpx;
  color: #FFFFFF;
  width: 107rpx;
  height: 44rpx;
  background: #E8AE56;
  border-radius: 0rpx 14rpx 0rpx 14rpx;
  line-height: 44rpx;
  transform: translate(-3px, -50%);
}

.charge_item_mon {
  font-weight: 500;
  font-size: 29rpx;
}

.charge_item_Oprice {
  font-weight: 500;
  font-size: 51rpx;
}

.charge_item_Dprice {
  text-decoration: line-through;
  font-weight: 400;
  font-size: 25rpx;
}

.charge_item_checked {
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(25%, -25%);
  width: 28px;
  height: 28px;
  color: #e43d3d;
  font-size: 14px;
  font-weight: bold;
}

/* 开通会员特权按钮 */
.btn_warp {
  padding: 10px;
}

.btns {
  text-align: center;
  width: 696rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: radial-gradient(0% 0% at 0% 0%, #F6DB98 0%, #F7EBD3 0%);
  border-radius: 38rpx 38rpx 38rpx 38rpx;
  font-weight: 500;
  font-size: 39rpx;
  color: #AB660B;
}

/* 精选好剧--图片样式 */
.jing-xuan-content {
  padding: 0 6px;
}

.jing-xuan-title {
  display: flex;
  align-items: center;
}

.van-cell-img {
  width: 37rpx;
  height: 41rpx;
  vertical-align: text-bottom;
  margin-right: 12rpx;
}

.van-cell-text {
  font-weight: 500;
  font-size: 33rpx;
  color: #000504;
  line-height: 58rpx;
  font-style: normal;
  text-transform: none;
}

.jing-xuan-img {
  width: 212rpx;
  height: 265rpx;
  background: #EBFDFB;
  border-radius: 21rpx 21rpx 21rpx 21rpx;
}

.jing-xuan-desc {
  width: 100%;
  font-weight: 400;
  text-align: left;
  font-style: normal;
  text-transform: none;
}

.jing-xuan-desc .desc {
  font-size: 28rpx;
  color: #000307;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.jing-xuan-desc .num {
  font-size: 22rpx;
  color: #999798;
  line-height: 38rpx;
}