  } */

.van-cell-img {
    width: 37rpx;
    height: 41rpx;
    vertical-align: text-bottom;
    margin-right: 12rpx;
}

.van-cell-text {
    font-weight: 500;
    font-size: 33rpx;
    color: #000504;
    line-height: 58rpx;
    font-style: normal;
    text-transform: none;
}

.jing-xuan-img {
    width: 212rpx;
    height: 265rpx;
    background: #EBFDFB;
    border-radius: 21rpx 21rpx 21rpx 21rpx;
}

.jing-xuan-desc {
    width: 100%;
    font-weight: 400;
    text-align: left;
    font-style: normal;
    text-transform: none;
}

.jing-xuan-desc .desc {
    font-size: 28rpx;
    color: #000307;
    line-height: 48rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.jing-xuan-desc .num {
    font-size: 22rpx;
    color: #999798;
    line-height: 38rpx;
}

.loading_tips {
    font-size: 12px;
    text-align: center;
}