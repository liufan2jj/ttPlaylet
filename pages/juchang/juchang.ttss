.van-search {
    background-color: #F41919 !important;
}

.van-search__content {
    background: #EEF3F4 !important;
    border-radius: 30rpx 30rpx 30rpx 30rpx !important;
}

/* 轮播图*/
.swiper_warp {
    display: flex;
    justify-content: center;
    background-image: linear-gradient(to bottom, #f41919, #fc4a40, #ff6c63, #ff8a84, #ffa6a4, #feb6bb, #fcc7cf, #f8d8e0, #f7e2ed, #f7ecf6, #f9f6fc, #ffffff);
}

swiper {
    width: 704rpx;
    height: 396rpx;
}

swiper image {
    width: 100%;
    height: 100%;
    border-radius: 8px;
}

/* 排行福利Vip*/
.custom-icon-warp {
    width: 40px;
    height: 40px;
    border: 1px solid #efefef;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #efefef;
    border-radius: 12px;
}

.custom-class {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.custom-icon {
    width: 67rpx;
    height: 71rpx;
}

.custom-title {
    font-weight: 500;
    font-size: 34rpx;
    color: #030004;
    line-height: 59rpx;
    font-style: normal;
    text-transform: none;
    text-align: center;
}

/* 精选好剧 */
