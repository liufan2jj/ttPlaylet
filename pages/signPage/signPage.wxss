.total_text {
  font-family: DIN, DIN;
  font-weight: bold;
  font-size: 75rpx;
  color: #FFFFFF;
  font-style: normal;
  text-transform: none;
}

.container-warp {
  padding: 0 10px;
  position: relative;
  top: -238rpx;
}

/* 签到面板 */
.sign_thead {
  background-image: linear-gradient(to right, #f7ebd3, #f7eacf, #f7e8cb, #f6e7c7, #f6e6c3, #f6e5be, #f6e4ba, #f6e3b5, #f6e1ae, #f6dfa7, #f6dd9f, #f6db98);
  border-radius: 14rpx 14rpx 0 0;
  padding: 0 6px;
}

.sign_content {
  border-top: none;
  padding: 8px;
  border-radius: 0rpx 0rpx 14rpx 14rpx;
  background-color: #ffffff;
}

.sign_title {
  display: flex;
  justify-content: space-between;
  line-height: 68rpx;
}

.mm {
  font-weight: 500;
  font-size: 33rpx;
  color: #000000;
  text-align: center;
  font-style: normal;
  text-transform: none;
}

.pp {
  font-weight: 400;
  font-size: 23rpx;
  color: #636161;
  text-align: center;
  font-style: normal;
  text-transform: none;
}

/* 天数列表样式 */
.head-dd {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 32px;
}

.head_info {
  text-align: center;
}

.head_title {
  font-size: 26rpx;
  line-height: 28rpx;
  color: #333333;
}

/* 签到图标和金币样式 */
.head-iconWarp {
  display: flex;
  justify-content: space-around;
  padding: 8px 0;
  height: 56px;
}

.icon_warp {
  position: relative;
  display: flex;
  align-items: center;
}

.next-gold-class {
  width: 77rpx;
  height: 75rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.activeGold {
  background: radial-gradient(0% 0% at 0% 0%, #FF2838 0%, #EB562B 0%), radial-gradient(0% 0% at 0% 0%, #EC6666 0%, #E60505 0%);
  border-radius: 14rpx 14rpx 14rpx 14rpx;
}

.head_icon {
  width: 60rpx;
  height: 60rpx;
  z-index: 1;
}

.afterInner_icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.sign-integral {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-weight: 500;
  font-size: 23rpx;
  color: #FFFFFF;
}

.head_line {
  position: absolute;
  top: 50%;
  left: -14%;
  transform: translate(-50%, -50%);
  height: 2rpx;
}

/* 签到按钮 */
.the-btn {
  padding: 4px;
}

.btn {
  background: #F82B25;
  border-radius: 38rpx 38rpx 38rpx 38rpx;
  height: 36px;
  line-height: 36px;
  text-align: center;
  color: #fff;
  font-weight: bold;
  width: 98%;
}

.tips {
  font-weight: 400;
  font-size: 26rpx;
  color: #636161;
  font-size: 12px;
  padding: 10px 10px;
  text-align: center;
}

/* 活动面板 */
.task_warp {
  margin: 20px 0;
}

.task_head {
  background-image: linear-gradient(to right, #f7ebd3, #f7eacf, #f7e8cb, #f6e7c7, #f6e6c3, #f6e5be, #f6e4ba, #f6e3b5, #f6e1ae, #f6dfa7, #f6dd9f, #f6db98);
  border-radius: 14rpx 14rpx 0 0;
  padding: 0 6px;
  line-height: 68rpx;
}

.task_title {
  font-weight: 500;
  font-size: 33rpx;
  color: #000000;
  font-style: normal;
  text-transform: none;
}

.todoList_warp {
  padding: 8px;
  border-radius: 0 0 14rpx 14rpx;
  background-color: #ffffff;
}

.todo_item {
  display: flex;
  justify-content: space-between;
  line-height: 88rpx;
  align-items: center;
  padding: 14rpx 0px;
}

.todo_item_warp {
  display: flex;
  align-items: center;
}

.todo_item_btn {
  height: 46rpx;
  width: 132rpx;
  font-weight: 500;
  font-size: 25rpx;
  line-height: 46rpx;
  text-align: center;
  font-style: normal;
  text-transform: none;
}

.todes_jifen {
  width: 61rpx;
  height: 61rpx;
  background: #F41919;
  border-radius: 50%;
  color: #fff;
  font-weight: 500;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.todes_title {
  margin-left: 4px;
  font-weight: 500;
  font-size: 28rpx;
  color: #110101;
  line-height: 58rpx;
  text-align: center;
  font-style: normal;
  text-transform: none;
}

/* 底部按钮 */
.bottom_warp {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.bottom_content {
  width: 274rpx;
  height: 72rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border-radius: 6px;
}

.bottom_left {
  background: radial-gradient(0% 0% at 0% 0%, #EC6666 0%, #E60505 0%), #BF8A68;
  color: #FFFFFF;
}

.bottom_right {
  color: #AB660B;
  background: radial-gradient(0% 0% at 0% 0%, #F6DB98 0%, #F7EBD3 0%);

}

.bottom_title {
  border-radius: 14rpx 14rpx 14rpx 14rpx;
  font-weight: 500;
  font-size: 31rpx;
  line-height: 64rpx;
  font-style: normal;
  text-transform: none;
}

.custom-icon {
  width: 41rpx;
  height: 37rpx;
}

