}

.totalNum {
  padding: 0 10px;
  background-color: #F41919;
}

.gap_warp {
  height: 238rpx;
  background-image: linear-gradient(to bottom, #f41919, #fc4a40, #ff6c63, #ff8a84, #ffa6a4, #feb6bb, #fcc7cf, #f8d8e0, #f7e2ed, #f7ecf6, #f9f6fc, #f9f6fc);
}

.totalNum_warp {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 190rpx;
}

.totalNum_left {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.custom-button {
  width: 175rpx;
  height: 63rpx;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 32rpx 32rpx;
  font-weight: 400;
  font-size: 35rpx;
  color: #F41919;
  line-height: 63rpx;
  text-align: center;
